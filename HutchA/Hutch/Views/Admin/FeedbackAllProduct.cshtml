@model List<Hutch.Models.Product>

@{
    ViewBag.Title = "FeedbackAllProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Styles/Admin/FeedbackAllProduct.css" rel="stylesheet" />


<main class="admin-all-feedback-products-container">

    <div class="all-feedback-products">
        @foreach (var product in Model)
        {
            var base64 = Convert.ToBase64String(product.p_image);
            var imagesrc = string.Format("data: image/gif; base64, {0}", base64);
            <a href="@Url.Action("ViewProductFeedback", "Admin" , new {pid = product.pid})" class="feedback-product-card">

                <div>
                    <img src="@imagesrc" alt="@product.p_name"/>
                </div>

                <div class="feedback-product-details">
                    <h6>@product.p_name</h6>
                </div>
            </a>
        }
    </div>
</main>