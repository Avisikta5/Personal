            </div>

        </div>

        <div class="hutch-categories-container">
            @foreach (var categories in Model.Categories)
             {

                var base64 = Convert.ToBase64String(categories.c_image);
                var imagesrc = string.Format("data: image/gif; base64, {0}", base64);

                <div class="category-card">
                    <a href="@Url.Action("FilterByCategory", "Home", new {category = categories.c_name})">
                        <img src="@imagesrc" alt="@categories.c_name"/>
                    </a>
                </div>
             }

        </div>

    </div>

    

    <div class="hutch-top-products">

        <h4>Top Selling Products</h4>

        <div class="hutch-top-products-container">
            @foreach (var topProduct in Model.TopSellingProducts)
            {
                var base64 = Convert.ToBase64String(topProduct.p_image);
                var imagesrc = string.Format("data: image/gif; base64, {0}", base64);

                <div class="top-product-card">

                    <div class="not-allowable-product-modal @(topProduct.p_qty <= 0 || topProduct.p_availability == "unavailable" ? "display-block" : "")"></div>

                    <div>
                        <img src="@imagesrc" alt="@topProduct.p_name"/>
                        <div class="product-details">

                            @if (topProduct.p_name.Length > 15)
                            {
                                <h5>@topProduct.p_name.Substring(0, 12)...</h5>
                            }
                            else
                            {
                                <h5>@topProduct.p_name</h5>
                            }

                            <div class="product-card-footer">
                                <h6>@topProduct.p_price</h6>

                                @if (topProduct.p_qty > 0 && topProduct.p_availability != "unavailable")
                                {
                                    <a href="@Url.Action("Details", "Product", new {pid = topProduct.pid})" class="add-to-cart-btn">Add</a>
                                }

                            </div>
                        </div>
                    </div>
                    @if (topProduct.p_availability == "unavailable")
                    {
                        <h6 class="item-additional-text">Unavailable</h6>
                    }
                    else
                    {
                        if (topProduct.p_qty <= 0)
                        {
                            <h6 class="item-additional-text">Out of stock</h6>
                        }
                        else if (topProduct.p_qty < 5)
                        {
                            <h6 class="item-additional-text">Few items left</h6>
                        }
                    }


                </div>
            }

        </div>
